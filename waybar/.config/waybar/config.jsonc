{
"layer": "top",
"position": "top",
"height": 10,
"margin-bottom":0,
"margin-top":0,

"modules-left": ["cpu","memory","network","mpd"],
"modules-center": ["hyprland/workspaces","hyprland/window"],
"modules-right":  ["tray","idle_inhibitor","pulseaudio","backlight","battery","clock","custom/sep","clock#date"],

"battery": {
  "states": {
  "warning": 30,
  "critical": 15
  },
  "format": "{icon}&#8239;{capacity}%",
  "format-charging": "ïƒ§ &#8239;{capacity}%",
  "format-plugged": "ïƒ§ &#8239;{capacity}%",
  "format-alt": "{icon} {time}",
  "format-icons": ["ï•¹ ", "ï•º ", "ï•» ", "ï•¼ ", "ï•½ ", "ï•¾ ", "ï•¸ "]
},
"hyprland/workspaces": {
 "sort-by-name": true,
 "on-click": "activate"
},
"hyprland/window": {
 "format": "{}",
 "rewrite": {
  "(.{42}).*": "$1..",
 },
 "icon": true,
 "icon-size": 22,
},
"custom/sep": {
 "format": "|",
 "tooltip": false,
},
"tray": {
    // "icon-size": 16,
    "show-passive-items": true,
    "spacing": 6
},
"clock": {
    "locale": "C",
    "format": "ï€— {:%H:%M}", // Icon: calendar-alt
    "format-alt": "ï€— {:%I:%M %p}",
},
"clock#date": {
        "format": "ï³  {:L%a %d %b}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#f5e0dc'><b>{}</b></span>",
                "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
                "today": "<span color='#f38ba8'><b>{}</b></span>",
            },
        },
        "actions": { "on-click-right": "mode" },
        "min-length": 8,
        "max-length": 28,
    },
"cpu": {
    "format": "ï‹› &#8239;{usage}%",
    "tooltip": false,
    "on-click": "kitty -e 'btop'"
},
"memory": {
    "interval": 30,
    "format": "ïƒ‰ {used:0.2f}GB",
    "max-length": 10,
    "tooltip": false,
    "warning": 70,
    "critical": 90
},
"network": {
  "interval": 2,
  "format-wifi": "ï‡«   {signalStrength}%",
  "format-ethernet": "ïƒ ",
  "format-linked": " {ipaddr}",
