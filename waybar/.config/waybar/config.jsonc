  "format-disabled": "",
  "tooltip": false,
  "max-length": 20,
  "min-length": 6,
  "format-alt": "{essid}",
},
"idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
        "activated": "ï® ",
        "deactivated": "ï° "
    }
},
"backlight": {
    // "device": "acpi_video1",
    "format": "{icon}&#8239;{percent}%",
    "format-icons": ["ïƒ«", "ïƒ«"],
    "on-scroll-down": "brightnessctl -c backlight set 1%-",
    "on-scroll-up": "brightnessctl -c backlight set +1%"
